{
  "name": "electron-rsbuild-template",
  "version": "1.0.0",
  "main": "./release/dist/main/index.js",
  "scripts": {
    "dev": "npm run dev:render",
    "dev:render": "rsbuild dev --config ./builder/render/rsbuild.dev.ts",
    "dev:main": "nodemon",
    "electron": "electron ./release/dist/main/index.js",
    "build:main": "rsbuild build --config ./builder/main/rsbuild.build.ts",
    "build:render": "rsbuild build --config ./builder/render/rsbuild.build.ts",
    "build": "npm run build:main &&  npm run build:render && electron-builder -c electron-builder.js ",
    "postinstall": "electron-builder install-app-deps",
    "lint": "pnpm biome check --write ./src"
  },
  "devDependencies": {
    "@rsbuild/core": "^1.5.12",
    "@rsbuild/plugin-react": "^1.4.1",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}